const minReorder = (n, connections) => {
  const graph = {};
  for (let i = 0; i < n; i++) {
    graph[i] = [];
  }
  for (let i = 0; i < connections.length; i++) {
    graph[connections[i][1]] = [...graph[connections[i][1]], connections[i][0]];
  }

  const visited = Array(n).fill(false);
  let count = 0;
  function dfs(node) {
    visited[node] = true;
    for (let neighbor of graph[node]) {
      if (!visited[neighbor]) {
        count++;
        dfs(neighbor);
      }
    }
  }
  dfs(0);
  return count;
};
